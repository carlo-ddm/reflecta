generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
}

enum AnalysisMetric {
  MOOD
  ENERGY
  STRESS
  FOCUS
  CLARITY
}

model User {
  id       String  @id @default(ulid())
  name     String
  email    String  @unique
  password String
  entries  Entry[]
}

model Entry {
  id        String    @id @default(ulid())
  author    User      @relation(fields: [authorId], references: [id])
  authorId  String
  createdAt DateTime  @default(now())
  content   String
  snippet   String
  analysis  Analysis? 
}

model Analysis {
  id        String        @id @default(ulid())
  createdAt DateTime      @default(now())
  entry     Entry         @relation(fields: [entryId], references: [id])
  entryId   String        @unique
  metrics   MetricScore[] 
}

model MetricScore {
  id         String         @id @default(ulid())
  analysis   Analysis       @relation(fields: [analysisId], references: [id])
  analysisId String
  key        AnalysisMetric
  score      Float
  @@unique([analysisId, key]) 
}